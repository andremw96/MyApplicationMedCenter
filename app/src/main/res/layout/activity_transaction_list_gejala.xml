<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wijaya_pc.myapplicationmedcenter.TransactionListActivity">


    <TextView
        android:id="@+id/idDaftarGejala"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Gejala Penyakit"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_view"
        android:iconifiedByDefault="false"
        android:padding="2dp"
        android:queryHint="Cari disini...."
        android:layout_alignBottom="@+id/buttonCari"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/idDaftarGejala"/>

    <ListView
        android:id="@+id/list_transactions_gejala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_view"/>

</RelativeLayout>